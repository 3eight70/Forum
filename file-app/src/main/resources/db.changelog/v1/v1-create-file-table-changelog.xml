<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Vasilev Danil">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="files"/></not>
        </preConditions>
        
        <createTable tableName="files">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="upload_time" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content_type" type="varchar(1000)">
                <constraints nullable="false" checkConstraint="size(content_type) > 0"/>
            </column>
            <column name="size" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="file_content" type="varbinary">
                <constraints nullable="false"/>
            </column>
            <column name="message_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>